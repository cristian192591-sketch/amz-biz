<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opening in Amazon Business…</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      text-align: center;
      padding: 50px 20px;
      margin: 0;
      background: #f5f6f8;
      color: #111;
    }
    h1 { color: #131921; margin-bottom: 8px; }
    p { max-width: 480px; margin: 0 auto 20px; color: #444; line-height: 1.5; }
    .asin { font-family: monospace; font-weight: bold; color: #0066c0; }
    .small { font-size: 0.85em; color: #666; }
    .error { color: #c40000; font-weight: bold; }
  </style>
</head>
<body>
  <script>
    const params = new URLSearchParams(window.location.search);
    const asin = params.get('asin')?.trim().toUpperCase();

    if (!asin || !/^[A-Z0-9]{10}$/.test(asin)) {
      document.body.innerHTML = `
        <h1>Error</h1>
        <p class="error">Missing or invalid ASIN.<br>Use: <code>?asin=B08N5WRWNW</code></p>
      `;
      return;
    }

    const ua = navigator.userAgent || '';
    const isAndroid = /Android/i.test(ua);
    const isIOS = /iPhone|iPad|iPod/i.test(ua);

    const productPath = `dp/${asin}`;
    const webUrl = `https://www.amazon.com/${productPath}`;

    const attempts = [
      `com.amazon.mobile.shopping.web://${productPath}`,  // Modern scheme
      `intent://www.amazon.com/${productPath}#Intent;scheme=https;package=com.amazon.mShop.android.shopping;end;`,  // Regular shopping app
      `intent://www.amazon.com/${productPath}#Intent;scheme=https;package=com.amazon.mShop.android.business.shopping;end;`  // Business app
    ];

    let attemptIndex = 0;

    function tryNext() {
      if (attemptIndex >= attempts.length) {
        window.location.replace(webUrl);
        return;
      }
      window.location.replace(attempts[attemptIndex++]);
      setTimeout(tryNext, isAndroid ? 1200 : 1800);
    }

    tryNext();

    document.body.innerHTML = `
      <h1>Redirecting…</h1>
      <p>Opening product <span class="asin">${asin}</span> in<br>
      <strong>Amazon Business</strong> app (if installed)</p>
      <p class="small">Trying Amazon Shopping app next…<br>Falling back to browser soon.</p>
    `;
  </script>

  <noscript>
    <h1>JavaScript required</h1>
    <p>Open manually: <a href="https://www.amazon.com/dp/REPLACE_ASIN_HERE">https://www.amazon.com/dp/REPLACE_ASIN_HERE</a></p>
  </noscript>
</body>
</html>
