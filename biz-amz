<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opening in Amazon Business…</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacOSystemFont, 'Segoe UI', Roboto, sans-serif;
      text-align: center;
      padding: 50px 20px;
      margin: 0;
      background: #f5f6f8;
      color: #111;
    }
    h1 { color: #131921; margin-bottom: 8px; }
    p { max-width: 480px; margin: 0 auto 20px; color: #444; line-height: 1.5; }
    .asin { font-family: monospace; font-weight: bold; color: #0066c0; }
    .small { font-size: 0.85em; color: #666; }
    .error { color: #c40000; font-weight: bold; }
  </style>
  <script>
    const params = new URLSearchParams(window.location.search);
    const asin = params.get('asin')?.trim().toUpperCase();

    if (!asin || asin.length < 8 || !/^[A-Z0-9]{10}$/.test(asin)) {
      document.body.innerHTML = `
        <h1>Error</h1>
        <p class="error">Missing or invalid ASIN.<br>
        Use: <code>?asin=B08N5WRWNW</code></p>
      `;
      throw new Error('Invalid ASIN');
    }

    const ua = navigator.userAgent || '';
    const isAndroid = /Android/i.test(ua);
    const isIOS = /iPhone|iPad|iPod/i.test(ua);

    const productPath = `dp/${asin}`;
    const webUrl      = `https://www.amazon.com/${productPath}`;

    // Attempts in order (best chance for Business → regular shopping → web)
    const attempts = [];

    // 1. Modern scheme (sometimes works for Business after recent updates)
    attempts.push(`com.amazon.mobile.shopping.web://${productPath}`);

    // 2. Classic intent → regular Amazon Shopping (most reliable)
    attempts.push(
      `intent://www.amazon.com/${productPath}#Intent;` +
      `scheme=https;package=com.amazon.mShop.android.shopping;end;`
    );

    // 3. Direct package attempt for Business (low success rate)
    attempts.push(
      `intent://www.amazon.com/${productPath}#Intent;` +
      `scheme=https;package=com.amazon.mShop.android.business.shopping;end;`
    );

    let attemptIndex = 0;

    function tryNext() {
      if (attemptIndex >= attempts.length) {
        window.location.replace(webUrl);
        return;
      }

      const url = attempts[attemptIndex];
      attemptIndex++;

      window.location.replace(url);

      // If the redirect fails (app not installed/not handling), try next after delay
      setTimeout(tryNext, isAndroid ? 1200 : 1800);
    }

    // Start chain
    tryNext();

    // Show nice loading message
    document.body.innerHTML = `
      <h1>Redirecting…</h1>
      <p>Opening product <span class="asin">${asin}</span> in<br>
      <strong>Amazon Business</strong> app (if installed)</p>
      <p class="small">Trying Amazon Shopping app next…<br>
      Falling back to browser in a few seconds.</p>
    `;
  </script>
</head>
<body>
  <noscript>
    <h1>JavaScript is required</h1>
    <p>Open manually: <a href="https://www.amazon.com/dp/REPLACE_ASIN_HERE">https://www.amazon.com/dp/REPLACE_ASIN_HERE</a></p>
  </noscript>
</body>
</html>
